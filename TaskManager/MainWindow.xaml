<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <materialDesign:Card Height="379" Background="Gray" Foreground="Black" FontFamily="Times New Rooman" Focusable="True">
            <DataGrid Name="gridTaskManager"></DataGrid>
        </materialDesign:Card>
        <materialDesign:Card Height="29" Background="LightGray" Foreground="Black" FontFamily="Times New Rooman" Focusable="True" Margin="639,384,16,0" RenderTransformOrigin="0.5,0.5">
            <Button Name="buttonTaskManager" Content="Снять задачу" Click="ButtonTaskManagerClick" Height="Auto"></Button>
        </materialDesign:Card>
    </Grid>
</Window>
